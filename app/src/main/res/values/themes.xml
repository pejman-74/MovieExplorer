<resources>


    <style name="Theme.MovieExplorer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:statusBarColor">@color/statusBarBackgroundColor</item>
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/actionBarBackgroundColor</item>
    </style>

    <style name="MovieItemDescriptionsStyle" parent="TextAppearance.Compat.Notification.Title">
        <item name="android:textColor">@color/movieItemDescriptionTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MovieItemTitlesStyle" parent="TextAppearance.Compat.Notification.Title">
        <item name="android:textColor">@color/movieItemTitlesTextColor</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>